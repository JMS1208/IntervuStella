<?xml version="1.0" encoding="utf-8"?>
<MotionScene 
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:motion="http://schemas.android.com/apk/res-auto">

    <Transition
        android:id="@+id/transition_touch"
        motion:constraintSetStart="@id/start_touch"
        motion:constraintSetEnd="@id/end_touch"
        motion:duration="3000">
        <KeyFrameSet>

            <KeyPosition
                motion:motionTarget="@+id/lottieAnimationView"
                motion:curveFit="spline"
                motion:keyPositionType="deltaRelative"
                motion:framePosition="50"
                motion:pathMotionArc="flip"
                motion:percentY="0"
                />
        </KeyFrameSet>
        <OnSwipe motion:touchAnchorId="@+id/rv_feedback"
            motion:touchAnchorSide="top"
            motion:dragDirection="dragUp"
            />
    </Transition>



    <ConstraintSet
        android:id="@+id/start_touch"
        >
    </ConstraintSet>

    <ConstraintSet
        android:id="@+id/end_touch"
        >

        <Constraint
            android:id="@+id/lottieAnimationView"
            android:layout_width="100dp"
            android:layout_height="100dp"
            motion:layout_constraintTop_toTopOf="parent"
            motion:layout_constraintEnd_toEndOf="parent" />
        <Constraint
            android:id="@+id/tv_total_duration"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            motion:layout_constraintBottom_toBottomOf="@id/tv_rank"
            motion:layout_constraintStart_toEndOf="@id/tv_rank"
            android:layout_marginStart="10dp" />
        <Constraint
            android:id="@+id/tv_deduction"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            motion:layout_constraintBottom_toTopOf="@id/tv_total_duration"
            motion:layout_constraintStart_toEndOf="@id/tv_rank"
            android:layout_marginStart="10dp" />
        <Constraint
            android:id="@+id/tv_rank"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="30dp"
            motion:layout_constraintTop_toTopOf="parent"
            motion:layout_constraintStart_toStartOf="parent"
            android:layout_marginTop="30dp"
            android:translationY="10dp"/>
    </ConstraintSet>


</MotionScene>